<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_white_background"
    tools:context=".ui.fragment.home.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/banner1" />

            <TextView
                android:id="@+id/recentProductsTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mới thêm gần đây"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingHorizontal="16dp"
                android:paddingTop="24dp"
                android:paddingBottom="8dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerRecentProducts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="1dp"
                android:clipToPadding="false" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tại sao nên chọn đồ cũ tại Re-Home?"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingHorizontal="16dp"
                android:paddingTop="24dp"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- Đảm bảo chất lượng"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingHorizontal="16dp"
                android:paddingTop="24dp"
                android:textColor="@color/primary_orange"
                android:paddingBottom="8dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- Giá cả phải chăng"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingHorizontal="16dp"
                android:textColor="@color/primary_orange"
                android:paddingTop="24dp"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- Không thu phí giao dịch"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingHorizontal="16dp"
                android:textColor="@color/primary_orange"
                android:paddingTop="24dp"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- Tặng phần quà giá trị đến 100k vnd đối với người dùng tạo tài khoản lần đầu"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingHorizontal="16dp"
                android:textColor="@color/primary_orange"
                android:paddingTop="24dp"
                android:paddingBottom="8dp" />

            <!-- Add more views below -->

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
